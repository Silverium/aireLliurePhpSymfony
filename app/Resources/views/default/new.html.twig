            </div>
            <div>
                <p class="pull-left">{{ competition.date|date('Y-m-d') }}</p>
                <p class="pull-right">{{ competition.place }}</p>
            </div>
            <p class="espacioVer">
                <a href='{{ competition.inscrLink  }}' target="_blank">
                    <img alt="" class="recuadro" src='{{ competition.imgLink }}' width="100%" /></a></p>
            <div>
                <p class="pull-left">{{ competition.organizer }}</p>
                <p class="pull-right">Estat:
                    <span class="red" style="font-weight: bold">{% if competition.inscriptable %} Inscripcions Obertes {% else %}Inscripcions tancades {% endif %}</span></p>
            </div>
        </div>
       <p>{{ competition.title }}</p>
